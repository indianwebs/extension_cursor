{
  "manifest_version": 3,
  "name": "CursorXL",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "description": "Una extensión para modificar el tamaño del cursor",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
