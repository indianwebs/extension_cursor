{
  "manifest_version": 3,
  "name": "CursorXL",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["cursor.css"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cursor.png", "cursor-hand.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["tabs", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
