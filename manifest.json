{
  "manifest_version": 3,
  "name": "BigMouse",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "media/icon.png",
      "48": "media/icon.png",
      "128": "media/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
 "web_accessible_resources": [
    {
      "resources": ["cursor.css", "media/*"],
      "matches": ["<all_urls>"]
    }
  ]
}